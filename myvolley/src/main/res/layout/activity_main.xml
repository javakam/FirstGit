<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolleyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_loadImage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tv_selector"
            android:gravity="center"
            android:text="ImageLoader方式请求图片"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_loader"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />
        <!--divider line-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#888" />

        <TextView
            android:id="@+id/tv_networkimageview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tv_selector"
            android:gravity="center"
            android:text="NetworkImageView控件加载图片"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_networkimageview"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_networkimageview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--divider line-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#888" />

        <TextView
            android:id="@+id/tv_yasuo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tv_selector"
            android:gravity="center"
            android:text="压缩图片"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--将要压缩图片-->
            <ImageView
                android:id="@+id/image_yasuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--网络原图-->
            <ImageView
                android:id="@+id/image_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--divider line-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#888" />

        <TextView
            android:id="@+id/tv_getJson"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tv_selector"
            android:gravity="center"
            android:text="get方式获取json数据"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_postJson"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/tv_selector"
            android:gravity="center"
            android:text="post方式获取json数据"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>